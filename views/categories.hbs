<div class="row">
    <div class="col-md-12">
        <h2>Categories
            <a href="/categories/add" class="btn btn-success pull-right">Add Category</a>
        </h2>
        <hr />
        <table class="table ">
            <thead>
                <tr>
                    <th scope="col">Category ID</th>
                    <th scope="col">Category Name</th>
                </tr>
            </thead>
            <tbody>
                {{#each categories}}
                <tr class="table-primary">
                    <td><a href="/posts?category={{id}}">{{id}}</a></td>
                    <td><a href="/posts?category={{id}}">{{category}}</a></td>
                    <td><a href = "/categories/delete/{{id}}" class="btn btn-danger">remove</a></td>
                </tr>
                {{else}}
                <tr>
                    <td colspan="4">No Data Available</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    {{#unless categories}}
    <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
    </div>
    {{/unless}}
</div>